<h1>Edit user</h1>
<div>
  <form>
    <div>
      <input type="hidden" value="{{_id}}" />
      <label for="FirstName">FirstName</label>
      <input class="FirstName" name="FirstName" type="text" value="{{FirstName}}" />
    </div><div>
      <input type="hidden" value="{{_id}}" />
      <label for="LastName">LastName</label>
      <input class="LastName" name="LastName" type="text" value="{{LastName}}" />
    </div><div>
      <input type="hidden" value="{{_id}}" />
      <label for="Email">Email</label>
      <input class="Email" name="Email" type="text" value="{{Email}}" />
    </div><div>
      <input type="hidden" value="{{_id}}" />
      <label for="Password">Password</label>
      <input class="Password" name="Password" type="text" value="{{Password}}" />
    </div>
    <div>
      <input type="submit" class="btn submit" value="Submit" /></div>
  </form>
</div>
